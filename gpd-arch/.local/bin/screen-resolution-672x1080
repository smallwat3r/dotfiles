#!/usr/bin/env bash
# Apply screen resolution to fit the GPD pocket 3
#
# You can generate resolutions with:
#
# cvt 700 1180 60
# >> "704x1180_60.00"   69.25  704 752 824 944  1180 1183 1193 1224 -hsync +vsync
#
set -e

xrandr --rmmode "672x1080_60.00" || true
xrandr --newmode "672x1080_60.00"   60.00  672 720 784 896  1080 1083 1093 1120 -hsync +vsync || true
xrandr --addmode DSI-1 "672x1080_60.00" || true
xrandr --output DSI-1 --mode "672x1080_60.00"

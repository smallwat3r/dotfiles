#!/usr/bin/env bash
# Custom application launcher

if ! [ -x "$(command -v choose)" ]; then
  echo 'You need to install "choose" using "brew install choose-gui"' >&2
  exit 1
fi

target=$(find '/Applications' '/System/Applications' '/System/Library/CoreServices' -type d -name '*.app' -maxdepth 1 |
  choose -f 'Triplicate A Code' -s 24 -u -c 087800 -p 'Search app...') || exit 0

open "${target}"

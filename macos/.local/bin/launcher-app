#!/usr/bin/env bash
# Launch macOS applications using fzf.
# Uses Spotlight index for fast lookups.
# Requires: fzf
set -euo pipefail

command -v fzf >/dev/null || { echo "fzf required" >&2; exit 1; }

target=$(
  mdfind "kMDItemKind == 'Application'" 2>/dev/null |
  fzf --wrap --color=fg+:186,hl:115,hl+:115 --bind=alt-left:backward-word,alt-right:forward-word,alt-bs:backward-kill-word,home:first,end:last
) || exit 0

open "$target"

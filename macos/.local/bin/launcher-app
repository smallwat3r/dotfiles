#!/usr/bin/env bash
# Custom application launcher

if ! [ -x "$(command -v fzf)" ]; then
  echo 'You need to install fzf' >&2
  exit 1
fi

target=$(
  find '/Applications' '/System/Applications' '/System/Library/CoreServices' -type d -name '*.app' -maxdepth 1 |
    FZF_DEFAULT_OPTS='--reverse --color bg:-1,bg+:-1,fg+:184,hl:50,hl+:50' FZF_DEFAULT_COMMAND='rg --smart-case' fzf
) || exit 0

open "${target}"

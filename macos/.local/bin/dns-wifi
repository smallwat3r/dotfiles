#!/usr/bin/env bash
# Toggle Google public DNS (8.8.8.8, 8.8.4.4) for Wi-Fi.
# Usage: dns-wifi on|off

case "$1" in
  on)
    sudo networksetup -setdnsservers Wi-Fi 8.8.8.8 8.8.4.4
    echo "Google DNS enabled"
    ;;
  off)
    sudo networksetup -setdnsservers Wi-Fi Empty
    echo "Google DNS disabled"
    ;;
  *)
    echo "Usage: ${0##*/} on|off" >&2
    exit 1
    ;;
esac

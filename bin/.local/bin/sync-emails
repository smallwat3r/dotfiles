#!/usr/bin/env bash
#
# Syncing emails with mbsync and notmuch
#
# Can be triggerd every minute by a cron job with:
#   */1 * * * * /usr/local/bin/sync-emails >/tmp/sync-emails-cron-stdout.log 2>/tmp/sync-emails-cron-stderr.log

/usr/bin/killall mbsync &>/dev/null  # kill current running instances of mbsync
/usr/local/bin/mbsync -a
/usr/local/bin/notmuch new
exit 0

#!/usr/bin/env bash
# Show local IP addresses (excluding loopback).
# Multiple IPs are space-separated (e.g., when connected to VPN).
if command -v ip &>/dev/null; then
  ip -4 addr show | grep -oP 'inet \K[0-9.]+' | grep -v '127.0.0.1'
elif command -v ifconfig &>/dev/null; then
  ifconfig |
    grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' |
    grep -Eo '([0-9]*\.){3}[0-9]*' |
    grep -v '127.0.0.1'
fi | tr '\n' ' ' | xargs

#!/usr/bin/env bash
# Undo a "git pause" commit, moving changes back to the working tree.
# See also: git-pause
# Source: https://github.com/ConradIrwin/git-aliae

if git log -1 --format="%s" | grep -q '^PAUSED'; then
  exec git reset HEAD^
else
  echo 'Latest commit was not created by "git pause".' >&2
  exit 1
fi

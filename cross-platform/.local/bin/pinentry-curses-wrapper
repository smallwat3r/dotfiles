#!/bin/sh
# Wrapper for pinentry-curses that works on both macOS (Homebrew) and Linux.
# Used by GPG agent for passphrase entry.
if command -v pinentry-curses >/dev/null 2>&1; then
  exec pinentry-curses "$@"
elif [ -x /opt/homebrew/bin/pinentry-curses ]; then
  exec /opt/homebrew/bin/pinentry-curses "$@"
elif [ -x /usr/local/bin/pinentry-curses ]; then
  exec /usr/local/bin/pinentry-curses "$@"
else
  exec /usr/bin/pinentry-curses "$@"
fi

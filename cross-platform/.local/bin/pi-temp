#!/usr/bin/env bash
# SSH into a Pi (configured via ~/.ssh/config) and show its temperature.

if [[ $# -ne 1 ]]; then
  printf 'Usage: %s <ssh-target>\n' "$0" >&2
  exit 1
fi

target=$1

# Run vcgencmd on the remote host
if ! ssh "$target" 'vcgencmd measure_temp'; then
  printf 'Error: failed to run vcgencmd on "%s"\n' "$target" >&2
  exit 1
fi

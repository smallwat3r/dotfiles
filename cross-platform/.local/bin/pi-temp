#!/usr/bin/env bash
# Show the temperature of a Raspberry Pi via SSH.
# Usage: pi-temp <ssh-target>
# The target should be configured in ~/.ssh/config.
set -euo pipefail

if [[ $# -ne 1 ]]; then
  echo "Usage: ${0##*/} <ssh-target>" >&2
  exit 1
fi

ssh "$1" 'vcgencmd measure_temp' ||
  { echo "Error: failed to run vcgencmd on \"$1\"" >&2; exit 1; }

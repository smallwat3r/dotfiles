# Mako notification daemon config

# Positioning and layout
anchor=top-right
margin=10
padding=10
width=300
max-visible=3

# Auto-hide notifications after 5 seconds (5000ms)
default-timeout=5000

# Left click to focus app, right click to dismiss
on-button-left=invoke-default-action
on-button-right=dismiss
on-button-middle=dismiss-all

# Group notifications from the same app
group-by=app-name

# Show icons
icons=1
max-icon-size=48

# Critical notifications don't auto-dismiss
[urgency=critical]
ignore-timeout=1

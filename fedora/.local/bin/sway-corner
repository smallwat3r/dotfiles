#!/bin/bash
# Move floating window to corner
# Usage: sway-corner [1-4]
# 1=top-left, 2=bottom-left, 3=top-right, 4=bottom-right

corner=$1

read -r win_w win_h < <(swaymsg -t get_tree | jq -r '
  .. | select(.focused?) |
  "\(.rect.width) \(.rect.height)"
')

read -r out_w out_h < <(swaymsg -t get_outputs | jq -r '
  .[] | select(.focused) |
  "\(.rect.width) \(.rect.height)"
')

case $corner in
    1) x=0; y=0 ;;
    2) x=0; y=$((out_h - win_h)) ;;
    3) x=$((out_w - win_w)); y=0 ;;
    4) x=$((out_w - win_w)); y=$((out_h - win_h)) ;;
    *) exit 1 ;;
esac

swaymsg "move position $x $y"

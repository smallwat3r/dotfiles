#!/usr/bin/env bash
# Home screenlayout using Displaylink.
# Use 2 monitor screens and the laptop screen.
set -e

xrandr --rmmode "800x1280_60.00" || true
xrandr --newmode "800x1280_60.00"   85.25  800 856 936 1072  1280 1283 1293 1327 -hsync +vsync || true

xrandr \
    --output DSI-1 --primary --mode "800x1280_60.00" --pos 0x2160 --rotate right \
    --output HDMI-1 --off \
    --output DP-1 --off \
    --output DP-2 --off \
    --output DP-3 --off \
    --output DP-4 --off \
    --output DVI-I-2-2 --mode 1920x1080 --pos 0x0 --rotate inverted \
    --output DVI-I-1-1 --mode 1920x1080 --pos 0x1080 --rotate normal

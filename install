#!/bin/bash
# File  : install
# Author: Matthieu Petiteau <mpetiteau.pro@gmail.com>
# Date  : 23.12.2019
#
# Install all
#
set -e

install_homebrew() { ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"; }
install_oh_my_zsh() { sh -c "$(curl -fsSL https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"; }
install_brew_packages() { perl $PWD/brew; }
install_python_packages() { pip3 install -r pip/requirements.txt; }
set_macos() { source $PWD/macos/macos; }
set_symlinks() { perl $PWD/symlink; }

setup() {
    # Installs homebrew or update
    which -s brew
    if [[ $? != 0 ]]; then
        printf "[+] Installing Homebrew\n"
        install_homebrew
    else
        printf "[+] Updating Homebrew\n"
        brew update
    fi

    # Installs all
    printf "[+] Installing oh-my-zsh\n"
    install_oh_my_zsh
    printf "[+] Installing brew packages\n"
    install_brew_packages
    printf "[+] Installing python packages\n"
    install_python_packages
    printf "[+] Setting up macOS configs\n"
    set_macos
    printf "[+] Setting up symlinks\n"
    set_symlinks
    printf "\n***** ALL DONE *****\n"
}

case "$OSTYPE" in
darwin*)
    setup
    exit 0
    ;;
*)
    printf "This script needs to run on macOS\n"
    exit 1
    ;;
esac

[user]
name = Matthieu Petiteau
email = mpetiteau.pro@gmail.com

[github]
user = smallwat3r

[core]
autocrlf = input
editor = emacsclient

[merge]
conflictstyle = diff3

[pull]
rebase = true

[push]
default = simple

[branch]
sort = -committerdate

[url "https://github.com/"]
insteadOf = gh:

[url "https://gist.github.com/"]
insteadOf = gist:

[format]
pretty = format:%Cred%h%Creset - %Cgreen%an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset
date = relative

[alias]
a = add
b = branch
bb = branch -b
c = commit -v --message
ca = commit -v --amend --message
co = checkout
cob = checkout -b
com = "!f() { git checkout master || git checkout main; }; f"
d = diff
find = log --pretty=\"format:%Cgreen%H %Cblue%s\" --name-status --grep
init-empty = "!f() { git init && git commit --allow-empty --allow-empty-message --message ''; }; f"
last-commit-msg = log -1 --format=%s
p = push
pu = pull
rhh = reset --hard HEAD
rhm = reset --hard origin/master
s = status
ss = status --short
ours = "!f() { git co --ours $@ && git add $@; }; f"
theirs = "!f() { git co --theirs $@ && git add $@; }; f"
cp = cherry-pick
cl = clone
l = log
fl = log -u

[credential]
helper = store

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold

[color "status"]
added = yellow
changed = green
untracked = cyan
